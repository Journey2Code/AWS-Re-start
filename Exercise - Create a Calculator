operation = input("What operation would you like to perform?\n+, -, / or * ? ")
num1 = float(input("What is the first number? "))
num2 = float(input("What is the second number? "))

if operation == '+' :
    answer = num1 + num2
elif operation == '-' :
    answer = num1 - num2
elif operation == '/' :
    answer = num1 / num2    
elif operation == '*' :
    answer = num1 * num2
else :
    print("Wrong input")

print("The answer is: ", answer)
